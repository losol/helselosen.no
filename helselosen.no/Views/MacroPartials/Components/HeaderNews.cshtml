@inherits Umbraco.Web.Macros.PartialViewMacroPage
@{  var nyheter = Umbraco.Content(1119).Children.Where("Visible").OrderBy("CreateDate desc").Take(5);
 }
<div class="card-group">
	@foreach(var item in nyheter){
		<div class="card card-primary">
		@if (item.featuredImage != null && !(item.featuredImage is Umbraco.Core.Dynamics.DynamicNull)) 
			{
				@Umbraco.RenderMacro("ImageCropped", new {image=item.featuredImage, imageCrop="800x200", cssClass="card-img-top"});
				}
			<div class="card-block">
			  <h4 class="card-title">@item.pageTitle</h4>
			  <p class="card-text small">@item.pageSnippet</p>
			  <p class="card-text"><a href="@item.Url">Les mer</a></p>
			  <p class="card-text"><small class="text-muted">Oppdatert for 3 minutter siden</small></p>
			</div>
		</div>
	}			 
</div>